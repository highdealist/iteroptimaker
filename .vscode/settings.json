{
    "scm.alwaysShowRepositories": true,
    "editor.wordWrap": "on",
    "files.exclude": {
        "__pycache__/": true,
        "**Scripts/": true,
        "**__pycache__/": true,
        "**/.git/": true,
        ".gitignore": true,
        "**/.svn/": true,
        "**/.hg/": true,
        "**/.DS_Store/": true,
        "**/.vscode/": true,
        "**/.tests/": true,
        "**/.idea/": true,
        "**/.pytest_cache/": true,
        "**/.mypy_cache/": true,
        "**/.aider*/": true,
        ".*": true,
    },
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "ms-python.debugpy",
    "editor.experimentalInlineEdit.enabled": true,
    "editor.formatOnPaste": true
}